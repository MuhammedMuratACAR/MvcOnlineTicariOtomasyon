@using OnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<div class="alert alert-primary text-center mt-3 font-weight-bold">Sipariş Geçmişim</div>

<table id="TblSatisDetay" class="table table-bordered mt-2">
    <thead>
        <tr>

            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Adet</th>
            <th>Toplam Tutar</th>
            <th>Tarih</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td class="td">@item.Urun.UrunAd</td>
                <td class="td">@item.Fiyat</td>
                <td class="td">@item.Adet</td>
                <td class="td">@item.ToplamTutar</td>
                <td class="td">@Convert.ToDateTime(item.Tarih).ToString("dd/MM/yyyy")</td>


            </tr>
        }
    </tbody>

</table>


