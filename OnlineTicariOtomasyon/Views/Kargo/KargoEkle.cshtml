@model OnlineTicariOtomasyon.Models.Siniflar.KargoDetay
@{
    Layout = null;
}

@using (Html.BeginForm("KargoEkle", "Kargo", FormMethod.Post))
{
    <div class="form-group">
        <label>Takip Kodu</label>
        @Html.TextBoxFor(x => x.TakipKodu, new { @class = "form-control", maxlength = "10",@Value = ViewBag.takipKod, @readonly = "true" })
    </div>
    <div class="form-group">
        <label>Personel</label>
        @Html.DropDownListFor(x => x.PersonelID, (List<SelectListItem>)ViewBag.personels, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Alıcı</label>
        @Html.DropDownListFor(x => x.CariID, (List<SelectListItem>)ViewBag.caris, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Tarih</label>
        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control", @id = "kargoTarih", @type = "date" })
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary rounded text-white font-weight-bold">Kaydet</button>
    </div>
}
<script>



    var now = new Date();

    var day = ("0" + now.getDate()).slice(-2);
    var month = ("0" + (now.getMonth() + 1)).slice(-2);

    var today = now.getFullYear() + "-" + (month) + "-" + (day);
    var today2 = now.getFullYear() + "-" + (month);

    $('#kargoTarih').val(today);

</script>

