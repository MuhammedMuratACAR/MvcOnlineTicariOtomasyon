@model OnlineTicariOtomasyon.Models.Siniflar.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = null;
}
@using (Html.BeginForm("KategoriEkle", "Kategori", FormMethod.Post))
{
    <div class="form-group">
        <label>Kategori Ad</label>
        @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
