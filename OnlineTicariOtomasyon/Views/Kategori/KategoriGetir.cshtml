@model OnlineTicariOtomasyon.Models.Siniflar.Kategori
@{
    ViewBag.Title = "KategoriGetir";
    Layout = null;
}


@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.KategoriID)
    </div>
    <div class="form-group">
        <label>Kategori Ad</label>
        @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-warning rounded font-weight-bold">Güncelle</button>
    </div>

}



