
@model OnlineTicariOtomasyon.Models.Siniflar.SatisHareket
@{
    Layout = null;
}



@using (Html.BeginForm("SatisYap", "Urun", FormMethod.Post))
{


<div class="form-group">

    @Html.TextBoxFor(x => x.UrunID, new { @class = "form-control", @Value = ViewBag.urunId })
    @*<input type="text" name="UrunID" value="@ViewBag.urunId" class="form-control" />*@
</div>
    <div class="form-group">
        <label>Personel</label>
        @Html.DropDownListFor(x => x.PersonelID, (List<SelectListItem>)ViewBag.personel, new { @class = "form-control" })
    </div>
  
<div class="form-group">
    <label>Cari</label>
    @Html.DropDownListFor(x => x.CariID, (List<SelectListItem>)ViewBag.cari, new { @class = "form-control" })
</div>
    <div class="form-group">
        <label>Adet</label>
        @Html.TextBoxFor(x => x.Adet, new { @class = "form-control",id= "Adet", onkeyup = "hesaplama();",placeholder="Adet Giriniz"})
    </div>
    <div class="form-group">
        <label>Fiyat</label>
        <input type="text" name="Fiyat" id = "Fiyat"  class = "form-control" value="@ViewBag.fiyat" placeholder = "Fiyat Giriniz" onkeyup = "hesaplama();"/>
        @*@Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control", id = "Fiyat", onkeyup = "hesaplama();", placeholder = "Fiyat Giriniz", @Value = ViewBag.fiyat})*@
    </div>
    <div class="form-group">
        <label>Toplam Tutar</label>
        @Html.TextBoxFor(x => x.ToplamTutar, new { @readonly = "true", @class = "form-control", id = "ToplamTutar",
       @Value = "0"})
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-warning rounded font-weight-bold">Ekle</button>
    </div>
}

<script>
    function hesaplama() {
        var sayi1 = (document.getElementById('Adet').value);
        var sayi2 = (document.getElementById('Fiyat').value);     
        if (sayi1 != '' && sayi2 != '') document.getElementById('ToplamTutar').value = (parseFloat(sayi1) * parseFloat(sayi2));


    }
</script>
