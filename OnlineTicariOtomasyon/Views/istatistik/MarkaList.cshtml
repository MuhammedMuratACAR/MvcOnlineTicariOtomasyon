@model IEnumerable<OnlineTicariOtomasyon.Models.Siniflar.MarkaSinif>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Striped Full Width Table</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayi</th>
                </tr>
            </thead>
            <tbody>
                @{ int siraNo = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{siraNo++;} @siraNo.</td>
                        <td>@item.Marka</td>
                        <td>
                            @if (item.Sayi == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-danger" style="width: @item.Sayi%"></div>
                                </div>
                            }
                            else if (item.Sayi == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width:@item.Sayi%"></div>
                                </div>
                            }
                            else if (item.Sayi == 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width:@item.Sayi%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (item.Sayi == 1)
                            {
                                <span class="badge bg-danger"> @item.Sayi</span>
                            }
                            else if (item.Sayi == 2)
                            {
                                <span class="badge bg-warning"> @item.Sayi</span>
                            }
                            else if (item.Sayi == 3)
                            {
                                <span class="badge bg-success"> @item.Sayi</span>
                            }
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
